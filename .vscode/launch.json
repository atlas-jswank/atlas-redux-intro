{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "1-counter.js",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/0-node/1-counter.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "2-todo.js",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/0-node/2-todo.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "3-shopping-cart.js",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/0-node/3-shopping-cart.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "1-counter.ts",
      "program": "${workspaceFolder}/0-node/1-counter.ts",
      "preLaunchTask": "tsc: build - 0-node/tsconfig.json",
      "outFiles": ["${workspaceFolder}/0-node/out/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "2-todo.ts",
      "program": "${workspaceFolder}/0-node/2-todo.ts",
      "preLaunchTask": "tsc: build - 0-node/tsconfig.json",
      "outFiles": ["${workspaceFolder}/0-node/out/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "3-shopping-cart.ts",
      "program": "${workspaceFolder}/0-node/3-shopping-cart.ts",
      "preLaunchTask": "tsc: build - 0-node/tsconfig.json",
      "outFiles": ["${workspaceFolder}/0-node/out/**/*.js"]
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug React",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/1-react/src"
    }
  ]
}
